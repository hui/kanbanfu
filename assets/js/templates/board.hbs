<ol class="breadcrumb">
  <li>{{#link-to 'boards'}}Boards{{/link-to}}</li>
  <li class="active">{{model.name}}</li>
</ol>

<div class="">
  <table class="table">
  {{#each trelloAction in trelloActions}}
  <tr>
    <td nowrap="nowrap">
      <strong>{{trelloAction.memberCreator.fullName}}</strong>
    </td>
    <td>
      <span {{bind-attr class=":label trelloAction.isCreateType:label-danger:label-info"}}>{{trelloAction.typeName}}</span>
      {{trelloAction.data.card.name}}

      {{#if trelloAction.isUpdateType}}
        <span class="label label-info">from</span>
        <strong>{{trelloAction.data.listBefore.name}}</strong>
        <span class="label label-info">to</span>
        <strong>{{trelloAction.data.listAfter.name}}</strong>
      {{/if}}
      {{#if trelloAction.isCreateType}}
        <span class="label label-info">on</span>
        <strong>{{trelloAction.data.list.name}}</strong>
      {{/if}}
    </td>
    <td>
      {{timeAgo trelloAction.date}}
    </td>
  </tr>
  {{/each}}
  </table>
</div>