<ol class="breadcrumb">
  <li>{{#link-to 'boards'}}Boards{{/link-to}}</li>
  <li class="active">{{model.name}}</li>
</ol>

<h3>Cumulative Flow</h3>

{{stacked-area-chart data=listCardsByDayArray}}

<h3>People Activities</h3>

<table class="table table-condensed">
{{#each actionList in actionsByMember}}
  <tr>
    <td>
      <strong>{{actionList.name}}</strong>
    </td>
    <td>
      <div style="height:80px;">{{cal-heatmap data=actionList.values}}</div>
    </td>
  </tr>
{{/each}}
</table>

<h3>Board Summary</h3>

<table class="table table-condensed">
{{#each list in trelloLists}}
  <tr>
    <td>
      <strong>{{list.name}}</strong>
    </td>
    <td>
      <ol>
        {{#each card in list.cards}}
          <li>
            <a {{bind-attr href=card.url}} target="_blank">{{card.name}}</a>
            {{#each member in card.members}}
              <span class="label label-info">{{member.fullName}}</span>
            {{/each}}
          </li>
        {{/each}}
      </ol>
    </td>
  </tr>
{{/each}}
</table>